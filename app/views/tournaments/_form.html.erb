<div class="container">
  <%= form_with(model: @tournament, local: true) do |form| %>
    <% if @tournament.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>
        <ul>
          <% @tournament.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :start_date %>
      <%= form.date_select :start_date, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :end_date %>
      <%= form.date_select :end_date, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :status %>
      <%= form.select :status, Tournament::STATUS, { prompt: "Pick one" }, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>