<h1>Edit Game</h1>

<%= form_with(model: @game, url: game_path(@game), method: :patch) do |form| %>
  <div>
    <%= form.label :home_team %>
    <%= form.text_field :home_team %>
  </div>

  <div>
    <%= form.label :away_team %>
    <%= form.text_field :away_team %>
  </div>

  <div>
    <%= form.label :game_start %>
    <%= form.datetime_local_field :game_start %>
  </div>

  <div>
    <%= form.label :game_end %>
    <%= form.datetime_local_field :game_end %>
  </div>

  <div>
    <%= form.label :knockout_game %>
    <%= form.check_box :knockout_game %>
  </div>

  <div>
    <%= form.label :home_team_goals %>
    <%= form.text_field :home_team_goals %>
  </div>

  <div>
    <%= form.label :away_team_goals %>
    <%= form.text_field :away_team_goals %>
  </div>

  <div>
    <%= form.label :home_team_et_goals %>
    <%= form.text_field :home_team_et_goals %>
  </div>

  <div>
    <%= form.label :away_team_et_goals %>
    <%= form.text_field :away_team_et_goals %>
  </div>

  <div>
    <%= form.label :penalties_winner %>
    <%= form.text_field :penalties_winner %>
  </div>

  <%= form.submit "Update Game" %>
<% end %>

