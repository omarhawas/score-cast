<%= form_with(model: [@game, @game_prediction], url: game_game_predictions_path(@game)) do |form| %>
  <div class="field">
    <%= form.label :home_team_goals, "#{@game.home_team} Goals" %>
    <%= form.number_field :home_team_goals, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :away_team_goals, "#{@game.away_team} Goals" %>
    <%= form.number_field :away_team_goals, class: "form-control" %>
  </div>

  <% if @game.knockout_game %>
    <div class="field">
      <%= form.label :home_team_et_goals, "#{@game.home_team} Extra Time Goals" %>
      <%= form.number_field :home_team_et_goals, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :away_team_et_goals, "#{@game.away_team} Extra Time Goals" %>
      <%= form.number_field :away_team_et_goals, class: "form-control" %>
    </div>
  <% end %>

  <div class="actions">
    <% if @is_updating %>
      <%= form.submit "Update Prediction", class: "btn btn-primary" %>
    <% else %>
      <%= form.submit "Add Prediction", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
