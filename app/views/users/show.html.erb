<section class="user-profile">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  
  <div class="actions">
    <% if current_user?(@user) %> 
      <%= link_to "Edit Account", edit_user_path(@user), class: "btn btn-primary mr-2" %>
      <%= link_to 'Delete Account', @user, class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Permanently delete your account!?" } %>
    <% end %>
  </div>
</section>
